<section class="content">
<% @blogs.each do |blog| %>
  

       <div class="card" style="width: 28rem;">
           <%= image_tag(blog["multimedia"][0]["url"]) %>
           <div class="card-body">
               <h5 class="card-title"><%= blog["title"]%></h5>
               <p class="card-text"><%= blog["abstract"] %></p>
               <a href="#" class="btn btn-primary">Read</a>
           </div>
       </div>

   
<% end %>
</section>

